contador = 1
while contador <= 5:
    nota_1 = float(input('Digite a 1º nota: '))
    nota_2 = float(input('Digite a 2º nota: '))

    print(f'Média: {(nota_1+nota_2)/2}')
    contador +=1
#_________________________________________
for contador in range(1,4):
    nota_1 = float(input('Digite a 1º nota: '))
    nota_2 = float(input('Digite a 2º nota: '))

    print(f'Média: {(nota_1+nota_2)/2}')

